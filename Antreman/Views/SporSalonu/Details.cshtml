@model FitnessCenterDetailViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <div>
        <h4>FitnessCenter</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FitnessCenter.FitnessCenterName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FitnessCenter.FitnessCenterName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FitnessCenter.FitnessCenterAdress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FitnessCenter.FitnessCenterAdress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FitnessCenter.Capacity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FitnessCenter.Capacity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FitnessCenter.District)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FitnessCenter.District.DistrictName)
            </dd>
        </dl>
    </div>


    <table class="table">
        <thead>
            <tr>
                <th>
                    Kategori
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (FitnessCenterSubCat fitnessCenterSubCat in Model.FitnessCenterSubCatList)
            {
                <tr>
                    <td>
                        @fitnessCenterSubCat.SubCategory.SubCategoryName
                    </td>
                    <td>
                        X
                    </td>
                </tr>
            }
        </tbody>
    </table>







    <div>
        <form asp-controller="SporSalonu" asp-action="AddSubCategoryToFitnessCenter" asp-route-id="@Model.FitnessCenter.FitnessCenterID">
            <select name="SubCategoryID">
                <option value="0" selected disabled="disabled">Alt Kategori</option>

                @foreach (SubCategory subCategory in Model.SubCategoryList)
                {

                    <option value="@subCategory.SubCategoryID">@subCategory.SubCategoryName</option>

                }

            </select>
            <div class="form-group">
                <input type="submit" value="Alt Kategori Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.FitnessCenter.FitnessCenterID">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</body>
</html>
